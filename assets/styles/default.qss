/* Begin Global */
* {
  font-family: Lato;
  font-size: 18px;
}
/* End Global */

/* Begin SettingsViews */
QLabel#title {
  font-family: Lato;
  font-weight: 300;
  font-size: 50px;
  background-color: #ededed;
}
QLabel#field-description{
  color: #727272;
  font-size: 18px;
}
QLineEdit {
  border: 1px solid #787878;
  border-radius: 5px;
  padding: 3px;
}
QLineEdit:focus {
  border: 2px solid #2c92ea;
  outline: none;
}
/* End SettingsView */

/* Begin Sidebar */
QWidget#sidebar {
  background-color: #292929;
}
QToolButton {
  margin: 5px;
  color: #ededed;
  background-color: #292929;
  border: none;
  font-size: 11px;
}
QToolButton:hover, QToolButton:pressed {
  border: 2px solid #2c92ea;
  border-radius: 5px;
}
/* End SettingsView */

/* Begin Slideshow */
PFImageWidget {
  border: 10px solid rgba(255, 255, 255, 100%);
}

QLabel#status-label {
  background-color : rgba(0, 0, 0, 50%);
  color : white;
  border-radius: 5px;
  opacity: 0.6;
  padding: 5px;
}
/* End Slideshow */

/* Begin MainWindow */
MainWindow {
  border: 10px solid rgba(255, 255, 255, 100%);
  background-color: #292929;
}

QPlainTextEdit {
  background-color: #515151;
  border: 2px solid rgba(50, 50, 50, 100%);
  border-radius: 5px;
}

QPushButton {
  margin: 5px;
  color: #ededed;
  background-color: #292929;
  border: 1px solid #515151;
  border-radius: 5px;
  font-size: 11px;
}


/* End MainWindow */
